@page
@model UnikPedel.Web.Pages.Vicevært.OpretModel
@{
}
<div class="container-fluid">
    <br />
<h3>Opret vicevært</h3>
<br />
    <div class="border container" style="padding: 30px">
          <form class="row g-3" method="post">
            <div class="col-md-6">
                <label asp-for="Vicevært.ForNavn" class="control-label"></label>
                <input asp-for="Vicevært.ForNavn" class="form-control"/>
                <span asp-validation-for="Vicevært.ForNavn" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Vicevært.EfterNavn" class="control-label"></label>
                <input asp-for="Vicevært.EfterNavn" class="form-control"/>
                <span asp-validation-for="Vicevært.EfterNavn" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Vicevært.Telefon" class="control-label"></label>
                <input asp-for="Vicevært.Telefon" class="form-control"/>
                <span asp-validation-for="Vicevært.Telefon" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Vicevært.Email" class="control-label"></label>
                <input asp-for="Vicevært.Email" class="form-control"/>
                <span asp-validation-for="Vicevært.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                  <label for="formFile" class="form-label">Tilføj billeder</label>
                  <input class="form-control" type="file" id="formFile">
            </div>         
                 <div class="col-md-6">
                 <input type="submit" value="Create Employee" class="btn btn-outline-success"/>
                     <a class="btn btn-primary" asp-page="/Admin/Medarbejder">Tilbage</a>
                 </div>
        </form>
        </div>
</div>
