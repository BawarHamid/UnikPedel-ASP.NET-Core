@page
@model UnikPedel.Web.Pages.Gæstelejligheder.Booking.OpretModel
@{
}


<div class="container-fluid">
    <br />
    <h2>Opret ny Booking</h2> 
    <br />
    
    <div class="border container" style="padding: 30px">
        <form class="row g-3" method="post">
            @*StartTid*@
            <div class="col-md-6">
                <label asp-for="Booking.StartTid" class="control-label"></label>
                <input asp-for="Booking.StartTid" class="form-control" datetime-picker="dd MMM yyyy HH:mm"/>
                <span asp-validation-for="Booking.StartTid" class="text-danger"></span>
            </div>

            @*SlutTid*@
             <div class="col-md-6">
                <label asp-for="Booking.SlutTid" class="control-label"></label>
                <input asp-for="Booking.SlutTid" class="form-control" datetime-picker="dd MMM yyyy HH:mm"/>
                <span asp-validation-for="Booking.SlutTid" class="text-danger"></span>
            </div>

            @*LejerId*@
            <div class="col-md-6">
                <label asp-for="Booking.LejerId" class="control-label"></label>
                <input asp-for="Booking.LejerId" class="form-control"/>
                <span asp-validation-for="Booking.LejerId" class="text-danger"></span>
            </div>

            @*LejemålId*@
            <div class="col-md-6">
                <label asp-for="Booking.LejemaalId" class="control-label"></label>
                <input asp-for="Booking.LejemaalId" class="form-control"/>
                <span asp-validation-for="Booking.LejemaalId" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <input type="submit" value="Opret Booking" class="btn btn-outline-success"/>
                <a class="btn btn-primary" href="javascript: history.go(-1)">Tilbage</a>
            </div>
         </form>
    </div>
</div>