@page
@model UnikPedel.Web.Pages.Admin.MedarbejderModel
@{
}

<div class="d-flex justify-content-end mb-2 mt-5">
    <a class="btn btn-primary" asp-page="/Vicevært/Opret">Opret ny vicevært</a>
</div>



<article>
        <table class="table">
            <thead>
            <tr>
                <th>
                    <label asp-for="Vicevaerter.First().Id"></label>
                </th>
                <th>
                    <label asp-for="Vicevaerter.First().ForNavn"></label>
                </th>
               <th>
                    <label asp-for="Vicevaerter.First().EfterNavn"></label>
                </th>
                <th>
                    <label asp-for="Vicevaerter.First().Telefon"></label>
                </th>
                <th>
                    <label asp-for="Vicevaerter.First().Email"></label>
                </th>
                <th>
                    <label>Handlinger</label>
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Vicevaerter)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.ForNavn
                    </td>
                    <td>
                        @item.EfterNavn
                    </td>
                    <td>
                        @item.Telefon
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        <a asp-page="/Vicevært/Edit" class="btn btn-light" asp-route-id="@item.Id">Rediger</a> |
                        <a asp-page="/Vicevært/Slet" class="btn btn-danger" asp-route-id="@item.Id">Slet</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </article>
